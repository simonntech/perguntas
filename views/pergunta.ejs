<%- include("partials/header") %> <%- include("partials/navbar") %>

<body>
  <div class="container">
    <div class="card my-5 rounded rounded-lg shadow">
      <h3 class="card-title text-center p-4 bg-dark text-light">
        Detalhes da Pergunta
      </h3>
      <div class="card-body">
        <h4><%= pergunta.titulo %></h4>
        <p><%= pergunta.descricao %></p>
        <form method="post" action="/responder">
          <textarea placeholder="Digite sua resposta" class="form-control my-3" name="corpo" ></textarea>
          <input type="hidden" name="perguntaId" value="<%= pergunta.id %>">
          <button type="submit" class="btn btn-dark">Responder</button>
        </form>
      </div>
    </div>
  </div>
</body>

