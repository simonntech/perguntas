<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Fórum de Perguntas e Respostas</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <h1>Bem-vindo ao Fórum de Perguntas e Respostas</h1>
    <hr>
    <h3>Lista de Perguntas</h3>
    
    <!-- <%= %> -->
    <p>Nome: <%= nome %></p>
    <p>Idade: <%= idade %></p>
    <p>Empresa: <%= empresa %></p>

    <img src="/img/image.png">

    <% if (msg){ %>
            <h3 style="color: brown;"> Isso é uma mensagem de erro !</h3>
    <%} else { %>
            <h3 style="color: rgb(17, 95, 17);"> Tudo OK !</h3>
    <% } %>    

    <% produtos.forEach( (produto) => { %>
        <p><strong>Produto:</strong> <%= produto.nome %>, <strong>Preço:</strong> R$ <%= produto.preco %>,00</p>
        <hr>
    <% }) %>

</body>
</html>